<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/lrow_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/lrow_tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@id/lrow_image"
        app:layout_constraintBottom_toTopOf="@id/lrow_tv2"
        app:layout_constraintRight_toLeftOf="@id/lrow_checkBox"
        app:layout_constraintLeft_toRightOf="@id/lrow_image"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/lrow_tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/lrow_tv1"
        app:layout_constraintBottom_toBottomOf="@id/lrow_image"
        app:layout_constraintRight_toLeftOf="@id/lrow_checkBox"
        app:layout_constraintLeft_toRightOf="@id/lrow_image"
        android:layout_marginLeft="10dp"/>

    <CheckBox
        android:id="@+id/lrow_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>